generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  address   String?
  role      Role     @default(NORMAL_USER)
  ratings   Rating[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Ek Store Owner ka ek store ho sakta hai
  ownedStore Store?
}

enum Role {
  SYSTEM_ADMINISTRATOR
  NORMAL_USER
  STORE_OWNER
}

model Store {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  address   String
  ratings   Rating[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Har store ka ek maalik (owner) hoga, jo ek User hai
  owner     User     @relation(fields: [ownerId], references: [id])
  ownerId   String   @unique // @unique ensures one user owns only one store
}

model Rating {
  id           String @id @default(cuid())
  rating_value Int

  // Rating ka user se rishta
  user    User   @relation(fields: [userId], references: [id])
  userId  String

  // Rating ka store se rishta
  store   Store  @relation(fields: [storeId], references: [id])
  storeId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Ek user ek store ko ek hi baar rate kar sakta hai
  @@unique([userId, storeId], name: "user_store_unique_rating")
}